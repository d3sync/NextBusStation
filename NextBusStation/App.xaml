<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NextBusStation"
             xmlns:converters="clr-namespace:NextBusStation.Converters"
             x:Class="NextBusStation.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:FavoriteIconConverter x:Key="FavoriteIconConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:TestModeButtonConverter x:Key="TestModeButtonConverter" />
            <converters:TestModeColorConverter x:Key="TestModeColorConverter" />
            <converters:MonitoringButtonTextConverter x:Key="MonitoringButtonTextConverter" />
            <converters:ActiveStatusConverter x:Key="ActiveStatusConverter" />
            <converters:DataTypeVisibilityConverter x:Key="DataTypeVisibilityConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:StringToDoubleConverter x:Key="StringToDoubleConverter" />
            <converters:StringToTimeConverter x:Key="StringToTimeConverter" />
            <converters:KeyboardTypeConverter x:Key="KeyboardTypeConverter" />
            <converters:MapViewToggleConverter x:Key="MapViewToggleConverter" />
            <converters:HasItemsConverter x:Key="HasItemsConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
