<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NextBusStation.ViewModels"
             xmlns:models="clr-namespace:NextBusStation.Models"
             x:Class="NextBusStation.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="Settings"
             BackgroundColor="{StaticResource Background}">
    
    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Status Bar -->
        <Frame Grid.Row="0" 
               BackgroundColor="{StaticResource Primary}" 
               Padding="15" 
               CornerRadius="0"
               HasShadow="True">
            <Grid ColumnDefinitions="*,Auto">
                <Label Grid.Column="0" 
                       Text="{Binding StatusMessage}" 
                       TextColor="{StaticResource TextOnPrimary}"
                       FontSize="14"
                       VerticalOptions="Center"/>
                <ActivityIndicator Grid.Column="1" 
                                   IsRunning="{Binding IsLoading}" 
                                   IsVisible="{Binding IsLoading}" 
                                   Color="{StaticResource TextOnPrimary}"/>
            </Grid>
        </Frame>
        
        <!-- Settings List -->
        <ScrollView Grid.Row="1">
            <CollectionView ItemsSource="{Binding SettingGroups}" SelectionMode="None" Margin="0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:SettingGroup">
                        <StackLayout Padding="10,0,10,15">
                            
                            <!-- Category Header -->
                            <Frame Padding="15,12" 
                                   Margin="0,0,0,5"
                                   CornerRadius="10" 
                                   BackgroundColor="{StaticResource Secondary}"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                    <Label Grid.Column="0" 
                                           Text="{Binding Category}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           TextColor="{StaticResource TextOnSecondary}" 
                                           VerticalOptions="Center"/>
                                    <Button Grid.Column="1" 
                                            Text="Reset" 
                                            FontSize="12" 
                                            Padding="15,6" 
                                            BackgroundColor="{StaticResource Surface}"
                                            TextColor="{StaticResource Secondary}"
                                            CornerRadius="15"
                                            FontAttributes="Bold"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SettingsViewModel}}, Path=ResetCategoryCommand}"
                                            CommandParameter="{Binding Category}"/>
                                </Grid>
                            </Frame>
                            
                            <!-- Settings in Category -->
                            <CollectionView ItemsSource="{Binding Settings}" SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:AppSettings">
                                        <Frame Padding="15" 
                                               Margin="0,0,0,8" 
                                               CornerRadius="10" 
                                               BackgroundColor="{StaticResource Surface}"
                                               BorderColor="{StaticResource CardBorder}"
                                               HasShadow="True">
                                            <StackLayout Spacing="10">
                                                <Label Text="{Binding DisplayName}" 
                                                       FontSize="15" 
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextPrimary}"/>
                                                <Label Text="{Binding Description}" 
                                                       FontSize="13" 
                                                       TextColor="{StaticResource TextSecondary}"/>
                                                
                                                <!-- Integer/Double Input -->
                                                <Grid IsVisible="{Binding DataType, Converter={StaticResource DataTypeVisibilityConverter}, ConverterParameter='int|double'}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Frame Grid.Column="0"
                                                           Padding="10,8"
                                                           CornerRadius="8"
                                                           BackgroundColor="{StaticResource Gray100}"
                                                           BorderColor="{StaticResource Gray300}"
                                                           HasShadow="False">
                                                        <Entry Text="{Binding Value}" 
                                                               Keyboard="Numeric"
                                                               Placeholder="{Binding DefaultValue}"
                                                               TextColor="{StaticResource TextPrimary}"
                                                               TextChanged="OnSettingChanged"/>
                                                    </Frame>
                                                    <Frame Grid.Column="1"
                                                           Padding="10,8"
                                                           CornerRadius="8"
                                                           BackgroundColor="{StaticResource Info}"
                                                           HasShadow="False"
                                                           Margin="10,0,0,0">
                                                        <Label Text="{Binding Value}" 
                                                               FontSize="14" 
                                                               FontAttributes="Bold"
                                                               TextColor="{StaticResource TextOnPrimary}"
                                                               VerticalOptions="Center"/>
                                                    </Frame>
                                                </Grid>
                                                
                                                <!-- Boolean Switch -->
                                                <Switch IsToggled="{Binding Value, Converter={StaticResource StringToBoolConverter}}"
                                                        IsVisible="{Binding DataType, Converter={StaticResource DataTypeVisibilityConverter}, ConverterParameter='bool'}"
                                                        OnColor="{StaticResource Accent}"
                                                        ThumbColor="White"
                                                        Toggled="OnSwitchToggled"
                                                        HorizontalOptions="Start"/>
                                                
                                                <!-- Time Picker -->
                                                <Frame IsVisible="{Binding DataType, Converter={StaticResource DataTypeVisibilityConverter}, ConverterParameter='time'}"
                                                       Padding="10,8"
                                                       CornerRadius="8"
                                                       BackgroundColor="{StaticResource Gray100}"
                                                       BorderColor="{StaticResource Gray300}"
                                                       HasShadow="False"
                                                       HorizontalOptions="Start">
                                                    <TimePicker Time="{Binding Value, Converter={StaticResource StringToTimeConverter}}"
                                                               Format="HH:mm"
                                                               TextColor="{StaticResource TextPrimary}"
                                                               PropertyChanged="OnTimePickerChanged"/>
                                                </Frame>
                                                
                                                <!-- String Input -->
                                                <Frame IsVisible="{Binding DataType, Converter={StaticResource DataTypeVisibilityConverter}, ConverterParameter='string'}"
                                                       Padding="10,8"
                                                       CornerRadius="8"
                                                       BackgroundColor="{StaticResource Gray100}"
                                                       BorderColor="{StaticResource Gray300}"
                                                       HasShadow="False">
                                                    <Entry Text="{Binding Value}"
                                                           Placeholder="{Binding DefaultValue}"
                                                           TextColor="{StaticResource TextPrimary}"
                                                           TextChanged="OnSettingChanged"/>
                                                </Frame>
                                                
                                                <Label FontSize="12" 
                                                       TextColor="{StaticResource TextSecondary}"
                                                       Margin="0,5,0,0">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Current value: "/>
                                                            <Span Text="{Binding Value}" FontAttributes="Bold"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="2" 
              ColumnDefinitions="*,*" 
              Padding="10" 
              ColumnSpacing="10"
              BackgroundColor="{StaticResource Background}">
            <Button Grid.Column="0" 
                    Text="Reset All Settings" 
                    Command="{Binding ResetAllCommand}" 
                    BackgroundColor="{StaticResource Error}" 
                    TextColor="{StaticResource TextOnPrimary}"
                    CornerRadius="25"
                    FontSize="14"
                    FontAttributes="Bold"
                    Padding="0,15"
                    HeightRequest="50"/>
            <Button Grid.Column="1" 
                    Text="Reload Settings" 
                    Command="{Binding LoadSettingsCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource TextOnPrimary}"
                    CornerRadius="25"
                    FontSize="14"
                    FontAttributes="Bold"
                    Padding="0,15"
                    HeightRequest="50"/>
        </Grid>
    </Grid>
</ContentPage>
